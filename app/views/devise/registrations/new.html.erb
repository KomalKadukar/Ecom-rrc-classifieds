<div class="card mt-5">
  <header class="card-header">
    <%- if controller_name != 'sessions' %>
      <%= link_to "Log in", new_session_path(resource_name), class: "float-right btn btn-outline-primary mt-1" %>
    <% end -%>
    <h4 class="card-title mt-2">Sign up</h4>
  </header>
  <article class="card-body">
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= devise_error_messages! %>
    <div class="form-row">
      <div class="col form-group">
        <%= f.label :name %><br />
        <%= f.text_field :name, autofocus: true, autocomplete: "name", class:"form-control",
                          placeholder: "Full Name" %>
      </div> <!-- form-group end.// -->
      <div class="col form-group">
        <%= f.label :number %><br />
        <%= f.number_field :number, autocomplete: "student number", class:"form-control",
                            placeholder: "Student Number" %>
      </div> <!-- form-group end.// -->
    </div> <!-- form-row end.// -->
    <div class="form-group">
        <%= f.label :address %><br />
        <%= f.text_field :address, autocomplete: "address", class:"form-control" %>
    </div> <!-- form-group end.// -->
    <div class="form-row">
      <div class="form-group col-md-6">
        <%= f.label :city %><br />
        <%= f.text_field :city, autocomplete: "city", class:"form-control" %>
      </div> <!-- form-group end.// -->
      <div class="form-group col-md-6">
        <%= f.label :province %><br />
        <%= f.collection_select :province_id, Province.all, :id, :name, class: "form-control" %>
      </div> <!-- form-group end.// -->
    </div> <!-- form-row.// -->
    <div class="form-group">
      <%= f.label :email %><br />
      <%= f.email_field :email, autocomplete: "email", class: "form-control" %>
      <small class="form-text text-muted">We'll never share your email with anyone else.</small>
    </div> <!-- form-group end.// -->
    <div class="form-group">
      <%= f.label :password %>
      <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> characters minimum)</em>
      <% end %><br />
      <%= f.password_field :password, autocomplete: "new-password", class: "form-control" %>
    </div> <!-- form-group end.// -->
    <div class="form-group">
      <%= f.label :password_confirmation %><br />
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
    </div> <!-- form-group end.// -->
    <div class="form-group">
      <%= f.submit "Sign up", class: "btn btn-primary btn-block" %>
    </div> <!-- form-group// -->
    <%# <small class="text-muted">By clicking the 'Sign Up' button, you confirm that you accept our <br> Terms of use and Privacy Policy.</small> %>
  <% end %>
  </article> <!-- card-body end .// -->
  <div class="border-top card-body text-center">Have an account?
    <%= render "devise/shared/links" %>
  </div>
</div> <!-- card.// -->

