<div class="container">
  <div class="shadow-lg p-3 mb-5 bg-light rounded">
    <h3>Category - <span class="text-info font-weight-bold"> <%= @category.name %></span></h3>
  </div>

  <% @category.classifieds.each do |classified| %>
    <div class="alert alert-info" role="alert">
      <h4 class="alert-heading"><%= link_to classified.item, classified %></h4>
      <hr>
      <p class="text-justify"><%= classified.price %></p>
      <p class="text-justify"><%= classified.description %></p>
    </div>
<% end %>
</div>