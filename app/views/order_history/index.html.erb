<div class="shadow-lg p-3 mb-5 bg-light rounded">
  <h3 class="text-info font-weight-bold">Order History</h3>
  </div>

<div class="container mt-5">
  <div class="list-group">
    <h5 class="font-weight-bold">Order ID</h5>
    <% @orders.each do |order| %>
      <%= link_to order.id, order_history_path(id: order.id), class: "list-group-item list-group-item-action list-group-item-light font-weight-bold" %>
    <% end %>
  </div>
</div>
